@model Foroffer.Models.ViewModels.SubViewModel

@{
    ViewData["Title"] = "Category";
}

<section class="subcat">
    <div class="filters">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="subicons">
                    <h6>Subkateqoriya seçimi</h6>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                            Subkateqoriya
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (Subcategory item in Model.Subcategories)
                            {
                                <a class="dropdown-item" asp-action="Subcategory" asp-controller="Home" asp-route-id="@item.Id">@item.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="companies">
                    <h6>Şirkət seçimi</h6>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                            Sirket
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var element in ViewBag.Posts)
                            {
                                <a class="dropdown-item" asp-action="getCompany" asp-controller="Home" asp-route-id="@element.CompanyId">@element.Company.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">

            </div>
            <div class="col-lg-3 col-md-3">

            </div>
        </div>
    </div>
    <div class="clear"></div>
</section>
<section class="posts">
    <div class="post-container">

        @{
            int n = 0;
                            }
                            @foreach (Post item in Model.Posts)
                            {
                                if (n % 4 == 0)
                                {
                @:<div class="row">
                }
                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                    <div class="post">
                        <div class="heading">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                                    <img class="postlogo" src="~/images/@item.Company.LogoPath">
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-8 col-8">
                                    <div class="titles">
                                        <p class="ptitle">@item.Company.Name</p>
                                        <p class="address"><b>Ünvan:</b> @item.Company.Address</p>
                                        <a href="">
                                            <p>Bütün ünvanlar</p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="postcontent">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="uppart">
                                        <h6>@item.Title</h6>
                                    </div>
                                    <img class="postimg" src="~/images/@item.Image">
                                    <div class="posttext">
                                        <p>
                                            @item.Description
                                        </p>
                                        <p class="formore">
                                            <strong>Ətraflı:</strong>
                                            @if (item.URL != null)
                                            {
                                                <a href="@item.URL" target="_blank">BURADA</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Detailed" asp-controller="Detailed" asp-route-id="@item.Id">BURADA</a>
                                            }
                                        </p>
                                    </div>
                                    <div class="dates">
                                        <p class="postdate">Tarix: @item.CreatedDate.ToString("dd/MM/yyyy") _________</p>
                                        <p class="expdate">Bitme tarix: @item.ExpirationDate.ToString("dd/MM/yyyy") </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                if (n % 4 == 3)
                {
                @: </div>
            }

            n++;
        }

    </div>
</section>
<section class="mdposts">
    <div class="post-container">

        @{
            int m = 0;
        }
        @foreach (Post item in Model.Posts)
        {
            if (m % 3 == 0)
            {
                @:<div class="row">
                }
                <div class="col-md-4">
                    <div class="post">
                        <div class="heading">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                                    <img class="postlogo" src="~/images/@item.Company.LogoPath">
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-8 col-8">
                                    <div class="titles">
                                        <p class="ptitle">@item.Company.Name</p>
                                        <p class="address"><b>Ünvan:</b> @item.Company.Address</p>
                                        <a href="">
                                            <p>Bütün ünvanlar</p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="postcontent">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="uppart">
                                        <h6>@item.Title</h6>
                                    </div>
                                    <img class="postimg" src="~/images/@item.Image">
                                    <div class="posttext">
                                        <p>
                                            @item.Description
                                        </p>
                                        <p class="formore">
                                            <strong>Ətraflı:</strong>
                                            <a href="@item.URL" target="_blank">BURADA</a>
                                        </p>
                                    </div>
                                    <div class="dates">
                                        <p class="postdate">Tarix: @item.CreatedDate.ToString("dd/MM/yyyy") _________</p>
                                        <p class="expdate">Bitme tarix: @item.ExpirationDate.ToString("dd/MM/yyyy") </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                if (m % 3 == 2)
                {
                @: </div>
            }

            m++;
        }

    </div>
    <div class="mobcompanies">
        <h6>Şirkət seçimi</h6>
        <select>
            <option class="choose">Avtosalonlar</option>
            @foreach (Post element in Model.Posts)
            {
                <option>@element.Company.Name</option>
            }

        </select>
    </div>
</section>




